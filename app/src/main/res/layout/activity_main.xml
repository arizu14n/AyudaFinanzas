<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Ayuda Finanzas"
            android:textSize="24sp"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnCentralDeudores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central de Deudores" />

        <Button
            android:id="@+id/btnChequesDenunciados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheques Denunciados" />

        <Button
            android:id="@+id/btnEstadisticasCambiarias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EstadÃ­sticas Cambiarias" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>